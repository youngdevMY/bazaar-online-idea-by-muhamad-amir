<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/nav") %>
    <section class="container">
      <div class="row">
        <div class="col s12">
          <div class="card-panel menu-detail-title">
            <p class="flow-text center-align"><%=menu.menuName%></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col m8 s12">
          <div class="card">
            <div class="card-image menu-detail-image-box">
              <img src="<%= menu.menuImage %>" alt="" />
            </div>
            <div class="card-content">
              <div class="row">
                <div class="col s6">
                  <a href="/cart" class="btn green menu-detail-button">
                    ADD TO CART
                  </a>
                </div>
                <div class="col s6">
                  <p class="flow-text right-align"><%=menu.menuPrice%></p>
                </div>
              </div>
              <div class="row">
                <div class="col s12">
                  <ul class="tabs">
                    <li class="tab col s6">
                      <a href="#description" class="green-text text-darken-4"
                        >Description</a
                      >
                    </li>
                    <li class="tab col s6">
                      <a href="#review" class="green-text text-darken-4"
                        >Review</a
                      >
                    </li>
                  </ul>
                </div>
                <div id="description" class="col s12">
                  <p class="flow-text menu-detail-desc center-align">
                    DESCRIPTION
                  </p>
                  <p>
                    <%=menu.menuDesc%>
                  </p>
                </div>
                <div id="review" class="col s12">
                  <p class="flow-text menu-detail-desc center-align">
                    REVIEW
                  </p>
                  <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Praesentium quae corporis laudantium aperiam, alias unde?
                    Quae eveniet consectetur doloribus modi.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col m4 s12">
          <ul class="collection">
            <li class="collection-item">Info 1</li>
            <li class="collection-item">Info 2</li>
            <li class="collection-item">Info 3</li>
          </ul>
          <a href="/<%=menu._id%>/edit-menu" class="btn green">Edit Menu</a>
        </div>
      </div>
    </section>
    <%- include("partials/jquery") %>
  </body>
</html>
